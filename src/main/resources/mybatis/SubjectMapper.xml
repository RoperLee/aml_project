<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.antimoney.boot.mapper.SubjectMapper">

    <resultMap type="com.antimoney.boot.model.Subject" id="Subject">
        <result property="id" column="ID"/>
        <result property="fullName" column="FULL_NAME"/>
        <result property="shortName" column="SHORT_NAME"/>
        <result property="year" column="YEAR"/>
    </resultMap>

    <select id="getSubjectById" resultMap="Subject">
        SELECT * FROM COMPUTER_SUBJECT
        WHERE ID=#{id}
        AND IS_DELETED = 'N'
    </select>

    <select id="getAllSubject" resultMap="Subject">
        SELECT * FROM COMPUTER_SUBJECT
        WHERE IS_DELETED = 'N'
    </select>

</mapper>