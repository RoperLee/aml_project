<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.computer.boot.mapper.ChapterTopLevelMapper">

    <resultMap type="com.computer.boot.model.ChapterTopLevel" id="ChapterTopLevel">
        <result property="id" column="ID"/>
        <result property="title" column="TITLE"/>
        <result property="parentSubject" column="PARENT_SUBJECT"/>
        <result property="sortKeyNumber" column="SORT_KEY_NUMBER"/>
    </resultMap>

    <select id="getTopChapterListBySubjectId" resultMap="ChapterTopLevel">
        SELECT * FROM CHAPTER_TOP_LEVEL
        WHERE PARENT_SUBJECT=#{parentId}
        ORDER BY SORT_KEY_NUMBER
    </select>


</mapper>